<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detectCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="10dp"
    app:cardBackgroundColor="@color/white"
    app:strokeColor="@color/navy_blue"
    app:strokeWidth="1dp"
    app:cardCornerRadius="10dp"
    android:theme="@style/Theme.MaterialComponents.Light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Multi-select checkbox -->
        <CheckBox
            android:id="@+id/checkBoxSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <!-- Phone number row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detectionPhoneLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pnTitle"
                android:textColor="@color/navy_blue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detectionPhoneText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:textColor="@color/black" />

        </LinearLayout>

        <!-- Message label -->
        <TextView
            android:id="@+id/detectionMessageLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/msgTitle"
            android:textColor="@color/navy_blue"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <!-- Status row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detectionStatusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/msgStatus"
                android:textColor="@color/navy_blue"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/detectionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:textColor="@color/black"/>

        </LinearLayout>

        <!-- Delete button -->
        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="end"
            android:text="Delete"
            android:backgroundTint="@color/red"
            android:textColor="@android:color/white" />

        <!-- Message text -->
        <TextView
            android:id="@+id/detectionMessageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />

        <!-- Spacer -->
        <TextView
            android:id="@+id/detectionSpacer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <!-- Date row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detectionDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dateTitle"
                android:textColor="@color/navy_blue"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/detectionDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="4dp"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>