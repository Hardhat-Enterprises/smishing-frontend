<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="12dp">

    <!-- Card Container with solid white background -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:padding="16dp">

        <!-- Watermark logo behind content -->
        <ImageView
            android:id="@+id/widget_bg_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/smishing_detection_logo"
            android:scaleType="center"
            android:alpha="0.5"
            android:contentDescription="Watermark logo" />

        <!-- Foreground content on top of logo -->
        <LinearLayout
            android:id="@+id/widget_foreground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <!-- Title -->
            <TextView
                android:id="@+id/widget_app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smishing Detection App"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="16dp" />

            <!-- Detections -->
            <TextView
                android:id="@+id/widget_risk_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detections: 0"
                android:textColor="#B71C1C"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_border_red" />

            <!-- Confidence -->
            <TextView
                android:id="@+id/widget_confidence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confidence: --%"
                android:textColor="#1A237E"
                android:textSize="15sp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_border_neutral" />

            <!-- Weekly Trend -->
            <TextView
                android:id="@+id/widget_weekly_trend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly Trend: â€”"
                android:textColor="#E65100"
                android:textSize="15sp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_border_orange" />

            <!-- User Type -->
            <TextView
                android:id="@+id/widget_profile_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Type: --"
                android:textColor="#004D40"
                android:textSize="15sp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_border_green" />

            <!-- Safe Days -->
            <TextView
                android:id="@+id/widget_streak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Safe Days: --"
                android:textColor="#1B5E20"
                android:textSize="15sp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_border_blue" />

            <!-- Timestamp -->
            <TextView
                android:id="@+id/widget_large_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Updated: --:--"
                android:textColor="#616161"
                android:textSize="13sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
