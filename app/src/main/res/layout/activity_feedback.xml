<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ðŸ”™ Back Button -->
        <ImageButton
            android:id="@+id/feedback_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:padding="8dp"
            android:src="@drawable/back_button"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back_button_description" />

        <!-- ðŸª– App Logo -->
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/feedback_back"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:src="@drawable/hardhat_logo"
            android:contentDescription="@string/app_name" />

        <!-- ðŸ“ Header -->
        <TextView
            android:id="@+id/feedbackHeader"
            android:layout_below="@id/appLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedback"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

        <!-- ðŸ‘¤ Name Input -->
        <EditText
            android:id="@+id/nameInput"
            android:layout_below="@id/feedbackHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Your name"
            android:minHeight="48dp"
            android:inputType="textPersonName"
            android:autofillHints="name"
            android:textColorHint="#666666"
            android:textColor="#000000" />

        <!-- ðŸ’¬ Feedback Input -->
        <EditText
            android:id="@+id/feedbackInput"
            android:layout_below="@id/nameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:minLines="4"
            android:hint="Write your feedback here"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:textColorHint="#666666"
            android:textColor="#000000" />

        <!-- ðŸ§® Word Count -->
        <TextView
            android:id="@+id/wordCountText"
            android:layout_below="@id/feedbackInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Words: 0 / 150"
            android:textColor="#888888"
            android:layout_marginTop="4dp" />

        <!-- ðŸš« Word Limit Warning -->
        <TextView
            android:id="@+id/wordLimitWarning"
            android:layout_below="@id/wordCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Word limit exceeded!"
            android:textColor="#FF4444"
            android:visibility="gone" />

        <!-- â­ Rating Label -->
        <TextView
            android:id="@+id/ratingLabel"
            android:layout_below="@id/wordLimitWarning"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate your experience"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- â­ RatingBar -->
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ratingLabel"
            android:layout_marginTop="8dp"
            android:stepSize="1.0"
            android:numStars="5"
            android:layout_centerHorizontal="true" />

        <!-- ðŸ’¬ Popup Tooltip (Dynamic Message) -->
        <TextView
            android:id="@+id/ratingPopup"
            android:layout_below="@id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <!-- ðŸš€ Submit Button -->
        <Button
            android:id="@+id/submitFeedbackButton"
            android:layout_below="@id/ratingPopup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Feedback"
            android:layout_marginTop="20dp" />

        <!-- ðŸ“– View Feedback History -->
        <Button
            android:id="@+id/viewHistoryButton"
            android:layout_below="@id/submitFeedbackButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Recent Feedback"
            android:layout_marginTop="16dp" />
    </RelativeLayout>
</ScrollView>
