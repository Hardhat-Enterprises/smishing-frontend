<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/insights_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="start"
            android:background="@null"
            android:contentDescription="Back"
            android:src="@drawable/back_button" />

        <TextView
            android:id="@+id/mostTargetedYearTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Most Targeted Year"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/riskLevelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Risk Level"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/threatPatternTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Most Active Month"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/totalDetectionsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Detections"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/dateWiseLogTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Wise Detections"
            android:layout_marginTop="8dp"
            android:textSize="14sp" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
