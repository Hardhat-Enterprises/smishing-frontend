<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:itemBackground="@color/baby_blue"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:itemIconSize="25dp"
        app:itemHorizontalTranslationEnabled="false"
        app:labelVisibilityMode="labeled"
        app:itemPaddingBottom="10dp"
        android:theme="@style/Theme.SmishingDetectionApp"
        app:menu="@menu/activity_main_drawer" />

    <ScrollView
        android:id="@+id/settingsScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:layout_alignParentTop="true"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp">

            <!-- Logo -->
            <ImageView
                android:id="@+id/HardhatLogo"
                android:layout_width="112dp"
                android:layout_height="106dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/logo_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/new_logo" />

            <!-- : imageView7 added here -->
            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:contentDescription="Filter"
                android:src="@android:drawable/ic_menu_manage"
                app:layout_constraintTop_toBottomOf="@id/HardhatLogo"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Title -->
            <TextView
                android:id="@+id/SettingsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/settings"
                android:textColor="@color/navy_blue"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/imageView7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Font Scale -->
            <TextView
                android:id="@+id/textScaleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/font_size"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/SettingsText"
                app:layout_constraintStart_toStartOf="parent" />

            <SeekBar
                android:id="@+id/seekBarFontScale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:max="200"
                android:progress="100"
                app:layout_constraintTop_toBottomOf="@id/textScaleLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Switches -->
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/dark_mode_switch"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:padding="12dp"
                android:text="@string/dark_mode"
                app:layout_constraintTop_toBottomOf="@id/seekBarFontScale"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/bold_text"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:padding="12dp"
                android:text="@string/bold_text"
                app:layout_constraintTop_toBottomOf="@id/dark_mode_switch"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Buttons -->
            <Button android:id="@+id/accountBtn" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/account" android:layout_marginTop="12dp" android:background="@drawable/buttons_rounded" android:gravity="center" android:textSize="18sp" app:layout_constraintTop_toBottomOf="@id/bold_text" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" />
            <Button android:id="@+id/filteringBtn" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/filtering" android:layout_marginTop="12dp" android:background="@drawable/buttons_rounded" android:gravity="center" android:textSize="18sp" app:layout_constraintTop_toBottomOf="@id/accountBtn" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" />
            <Button android:id="@+id/notificationsBtn" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/notifications" android:layout_marginTop="12dp" android:background="@drawable/buttons_rounded" android:gravity="center" android:textSize="18sp" app:layout_constraintTop_toBottomOf="@id/filteringBtn" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" />
            <Button android:id="@+id/reportBtn" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/report" android:layout_marginTop="12dp" android:background="@drawable/buttons_rounded" android:gravity="center" android:textSize="18sp" app:layout_constraintTop_toBottomOf="@id/notificationsBtn" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" />
            <Button android:id="@+id/helpBtn" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/help" android:layout_marginTop="12dp" android:background="@drawable/buttons_rounded" android:gravity="center" android:textSize="18sp" app:layout_constraintTop_toBottomOf="@id/reportBtn" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" />
            <Button android:id="@+id/chatAssistantBtn" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/chat_assistant" android:layout_marginTop="12dp" android:background="@drawable/buttons_rounded" android:gravity="center" android:textSize="18sp" app:layout_constraintTop_toBottomOf="@id/helpBtn" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" />
            <Button android:id="@+id/guardianBtn" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/add_guardian" android:layout_marginTop="12dp" android:background="@drawable/buttons_rounded" android:gravity="center" android:textSize="18sp" app:layout_constraintTop_toBottomOf="@id/chatAssistantBtn" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" />
            <Button android:id="@+id/aboutMeBtn" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/about_me" android:layout_marginTop="12dp" android:background="@drawable/buttons_rounded" android:gravity="center" android:textSize="18sp" app:layout_constraintTop_toBottomOf="@id/guardianBtn" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" />
            <Button android:id="@+id/feedbackBtn" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/feedback" android:layout_marginTop="12dp" android:background="@drawable/buttons_rounded" android:gravity="center" android:textSize="18sp" app:layout_constraintTop_toBottomOf="@id/aboutMeBtn" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" />
            <Button android:id="@+id/aboutUsBtn" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/about_us" android:layout_marginTop="12dp" android:background="@drawable/buttons_rounded" android:gravity="center" android:textSize="18sp" app:layout_constraintTop_toBottomOf="@id/feedbackBtn" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" />
            <Button android:id="@+id/communityBtn" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/community" android:layout_marginTop="12dp" android:background="@drawable/buttons_rounded" android:gravity="center" android:textSize="18sp" app:layout_constraintTop_toBottomOf="@id/aboutUsBtn" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" />
            <Button android:id="@+id/forumBtn" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/forum" android:layout_marginTop="12dp" android:background="@drawable/buttons_rounded" android:gravity="center" android:textSize="18sp" app:layout_constraintTop_toBottomOf="@id/communityBtn" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" />
            <Button android:id="@+id/buttonSignOut" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/sign_out" android:layout_marginTop="12dp" android:background="@drawable/buttons_rounded" android:gravity="center" android:textSize="18sp" app:layout_constraintTop_toBottomOf="@id/forumBtn" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</RelativeLayout>
